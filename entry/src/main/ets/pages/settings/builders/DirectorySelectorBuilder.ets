          .scrollable(ScrollDirection.Horizontal)
          .scrollBar(BarState.Off)
        }
        .width('100%')
        .padding(12)
        .backgroundColor($r('sys.color.ohos_id_color_background'))

        // ä¸­é—´å†…å®¹åŒºåŸŸ
        Column() {
          if (this.isLoading) {
            // åŠ è½½çŠ¶æ€
            Row() {
              LoadingProgress()
                .width(30)
                .height(30)
                .color($r('sys.color.ohos_id_color_emphasize'))
            }
            .width('100%')
