          } else if (this.errorMessage) {
            // é”™è¯¯æç¤º
            Row() {
              Text(this.errorMessage)
                .fontSize(14)
                .fontColor($r('sys.color.ohos_id_color_text_secondary'))
            }
            .width('100%')
            .padding({ top: 40 })
            .justifyContent(FlexAlign.Center)
          } else {
            // æ–‡ä»¶å¤¹åˆ—è¡¨
            Scroll() {
              Column({ space: 0 }) {
                ForEach(this.directories, (directory: WebDAVResource) => {
                  Row() {
                    Text('ğŸ“')
                      .fontSize(24)
                      .margin({ right: 12 })

                    Text(directory.displayName)
                      .fontSize(16)
                      .fontColor($r('sys.color.ohos_id_color_text_primary'))
                      .layoutWeight(1)
                      .maxLines(1)
                      .textOverflow({ overflow: TextOverflow.Ellipsis })

                    Checkbox()
                      .select(this.isSelected(directory))
                      .selectedColor($r('sys.color.ohos_id_color_emphasize'))
                      .onChange(() => {
                        this.handleToggleSelection(directory)
                      })
                  }
                  .width('100%')
                  .height(56)
                  .padding({ left: 16, right: 16 })
                  .onClick(() => {
                    this.handleEnterDirectory(directory)
                  })
                  .backgroundColor($r('sys.color.ohos_id_color_sub_background'))
                  .border({
                    width: { bottom: 1 },
                    color: $r('sys.color.ohos_id_color_list_separator')
                  })
                  .stateStyles({
                    pressed: {
